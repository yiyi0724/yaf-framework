</div>
<script>
$(function() {
	$enyNow = $('#main-menu').find("[data-show=1]");
	$enyNow.addClass('active')
	$i = 3;
	while($i > 0) {
		var $li = $enyNow.parent('li');
		if($li.hasClass('root-level')) {
			$li.addClass('opened').addClass('active');
			break;
		} 

		$li.addClass('opened');
		$ul = $li.parent('ul');
		$ul.addClass('visible');
		$enyNow = $ul;

		$i--;
	}
});
</script>